<Window x:Class="RssReaderForReferenceDatabase._010_View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RssReaderForReferenceDatabase._015_ViewModel"
        xmlns:BehaviorClass="clr-namespace:RssReaderForReferenceDatabase._025_Class"
        mc:Ignorable="d"
        Title="Main"
        Style="{Binding Source={StaticResource DefaultWindowStyle}}"
        BehaviorClass:AttachedProperty.BehaviorCloseProperty="{Binding FlagBehaviorClose}"
        >
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--Control群-->
        <ScrollViewer
            CanContentScroll="True" 
            Foreground="Black"
            Grid.Row="0" 
            Grid.RowSpan="2" 
            Grid.ColumnSpan="5" 
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0">
                    <Button 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" 
                    Command="{Binding CommandGetAndShow}"
                    Style="{Binding Source={StaticResource IconButton}}"
                    >
                        <Button.Content>
                            <TextBlock 
                                    Foreground="White"
                                    TextAlignment="Center"
                                    FontSize="14"
                                    TextWrapping="Wrap"
                                >
                                <Run FontSize="24">G</Run>etData
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="1">
                    <Button 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" 
                    Command="{Binding CommandShowDataYouGot}"
                    Style="{Binding Source={StaticResource IconButton}}"
                    >
                        <Button.Content>
                            <TextBlock 
                                    Foreground="White"
                                    TextAlignment="Center"
                                    FontSize="14"
                                    TextWrapping="Wrap"
                                >
                                <Run Text="S" FontSize="24" />howed data you got
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="2">
                    <Button 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" 
                    Command="{Binding CommandShowDataNext}"
                    Style="{Binding Source={StaticResource IconButton}}"
                    >
                        <Button.Content>
                            <TextBlock 
                                    Foreground="White"
                                    TextAlignment="Center"
                                    FontSize="14"
                                    TextWrapping="Wrap"
                                >
                                <Run Text="N" FontSize="24" />ext
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="3">
                    <Button 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" 
                    Command="{Binding CommandShowDataPrev}"
                    Style="{Binding Source={StaticResource IconButton}}"
                    >
                        <Button.Content>
                            <TextBlock 
                                    Foreground="White"
                                    TextAlignment="Center"
                                    FontSize="14"
                                    TextWrapping="Wrap"
                                >
                                <Run Text="P" FontSize="24" />rev
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="4">
                    <TextBox x:Name="txtMaxRowCount" 
                             Text="{Binding Path=MaxRowCount,UpdateSourceTrigger=PropertyChanged}" 
                             Width="Auto" 
                             Height="Auto"  
                             TextAlignment="Right" 
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Center"
                     
                             />
                </Grid>

                <Grid Grid.Row="1" Grid.Column="0">
                    <Button 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" 
                    Command="{Binding CommandClearData}"
                    Style="{Binding Source={StaticResource IconButton}}"
                    >
                        <Button.Content>
                            <TextBlock 
                                    Foreground="White"
                                    TextAlignment="Center"
                                    FontSize="14"
                                    TextWrapping="Wrap"
                                >
                                <Run Text="C" FontSize="24" />lear
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
        </ScrollViewer>

        <ScrollViewer 
            CanContentScroll="True" 
            Foreground="Black"
            Grid.Row="2" 
            Grid.RowSpan="9" 
            Grid.ColumnSpan="5" 
            Content="{Binding ProcessedDataSource}"
            >
        </ScrollViewer>
    </Grid>
</Window>
