<Window x:Class="RssReaderForReferenceDatabase._010_View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RssReaderForReferenceDatabase._015_ViewModel"
        xmlns:BehaviorClass="clr-namespace:RssReaderForReferenceDatabase._025_Class"
        mc:Ignorable="d"
        Title="Main"
        Style="{Binding Source={StaticResource DefaultWindowStyle}}"
        BehaviorClass:AttachedProperty.BehaviorCloseProperty="{Binding FlagBehaviorClose}"
        >
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <DockPanel Height="31.5" LastChildFill="False" 
                   VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="3"
                   WindowChrome.IsHitTestVisibleInChrome="True"
                   />
        <Button x:Name="btnGetData"
                    Content="btnGetData" 
                    Width="55" 
                    Height="31.5"
                    Grid.Column="2"
                    Command="{Binding Path=CommandCalculate}"
                    />
        <TextBox x:Name="txtMaxRowCount" 
                     Text="{Binding Path=MaxRowCount,UpdateSourceTrigger=PropertyChanged}" 
                     Width="55" 
                     Height="31.5"  
                     Grid.Column="3"
                     TextAlignment="Right" 
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Bottom"
                     />

        <DataGrid ItemsSource="{Binding Path=DataSource}" 
                    Height="Auto" 
                    Grid.Row="1" 
                    Grid.RowSpan="8" 
                    Grid.ColumnSpan="4" 
                    />
    </Grid>
</Window>
